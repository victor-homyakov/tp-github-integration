{
    "manifest_version": 2,

    "name": "TP3 - GitHub integration",
    "description": "Integrate GitHub/Git operations into TP3 site.",
    "version": "1.0",

    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "permissions": [
        "contextMenus"
    ],

    "background": {
        "page": "open-in.html"
    },

    "options_page": "options.html",

    "plugins": [
        {
            "path": "simpleget/npsimpleGetPlugin.dll",
            "public": false
        },
        {
            "path": "simpleget/libsimpleGetPlugin.so",
            "public": false
        },
        {
            "path": "simpleget/libsimpleGetPlugin64.so",
            "public": false
        }
    ]
}
